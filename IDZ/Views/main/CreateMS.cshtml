@model IDZ.Models.ViewModels.MSVM

@{
    ViewBag.Title = "Add Master Service";
}

<h2>Add Master Service</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.MasterID, "Master")
        @Html.DropDownListFor(model => model.MasterID, Model.MastersList, "-- Select Master --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MasterID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ServiceName, "Service")
        @Html.DropDownListFor(model => model.ServiceName, Model.ServicesList, "-- Select Service --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ServiceName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExecutionTime, "Execution Time")
        @Html.EditorFor(model => model.ExecutionTime, new { htmlAttributes = new { @class = "form-control", type = "time" } })
        @Html.ValidationMessageFor(model => model.ExecutionTime)
    </div>

    <div class="form-group">
        <input type="submit" value="Add Service" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "ListOfProvidedServices", null, new { @class = "btn btn-secondary" })
    </div>
}
