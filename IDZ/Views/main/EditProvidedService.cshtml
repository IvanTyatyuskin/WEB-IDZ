@model IDZ.Models.ViewModels.providedServiceVM
@{
    ViewBag.Title = "Edit Provided Service";
}

<h2>Edit Provided Service</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Service Information</h4>
    <hr />

    @Html.ValidationSummary(true,"Ошибка",new {@class = "form-control" })

    @Html.HiddenFor(model => model.providedServiceID)

    <div class="form-group">
        @Html.LabelFor(model => model.providedServiceDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.providedServiceDateTime, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(model => model.providedServiceDateTime, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.providedServiceStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.providedServiceStatus, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.providedServiceStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.clientID, "Клиент", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.clientID, Model.ClientsList, "Выберите клиента", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.clientID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.masterID, "Мастер", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.masterID, Model.MastersList, "Выберите мастера", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.masterID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.serviceName, "Название услуги", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.serviceName, Model.ServicesList, "Выберите услугу", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.serviceName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ListOfProvidedServices")
</div>
